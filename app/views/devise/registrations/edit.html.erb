<h3>Edit profile</h3>
<!-- START panel-->
<div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
        <div class="panel panel-default">
            <!--div class="panel-heading">Horizontal form</div-->
            <div class="panel-body">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put,:class=>"form" }) do |f| %>
                  <%= devise_error_messages! %>
                  <div class="form-group">
                      <label class="control-label">Username</label>
                      <%= f.text_field :user_name, :autofocus=> true, :class=> 'form-control',:readonly=>true %>
                  </div>
                  <div class="form-group">
                      <label class="control-label">Password <small>(leave blank if you don't want to change it)</small></label>
                      <%= f.password_field :password, :autocomplete=> "off", :class=> 'form-control' %>
                  </div>
                  <div class="form-group">
                      <label class="control-label">Password confirmation</label>
                      <%= f.password_field :password_confirmation, :autocomplete=> "off", :class=> 'form-control' %>
                  </div>
                  <div class="form-group">
                      <label class="control-label">Current password <small>(we need your current password to confirm your changes)</small></label>
                      <%= f.password_field :current_password, :autocomplete=> "off", :class=> 'form-control' %>
                  </div>
                  <div class="form-group">
                      <%= f.submit "Update", class: 'btn btn-sm btn-primary' %>
                    </div>
                  <%end%>
              </div>
          </div>
      </div>
  </div>
  <!-- END panel-->