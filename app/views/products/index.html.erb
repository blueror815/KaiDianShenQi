<h3>Add New Product</h3>
<!-- START panel-->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!--div class="panel-heading">

            <!--small>Zero Configuration</small-->

            <div class="panel-body">
                <div class="row m-b-15">
                    <div class="col-xs-6">
                        Products
                    </div>
                    <div class="col-xs-6 text-right">
                        <%= link_to 'New Product', new_product_path, class: 'btn btn-primary' %>
                      </div>
                  </div>
                  <table class="table table-border table-striped table-hover">
                      <thead>
                          <tr>
                              <th>Title</th>
                              <th>Price</th>
                              <th>Description</th>
                              <th>Barcode</th>
                              <th>Stock </th>
                              <th>Point value</th>
                              <th>Show</th>
                              <th>Edit</th>
                              <th>Delete</th>
                          </tr>
                      </thead>
                      <tbody>
                          <% @products.each do |product| %>
                            <tr>
                                <td><%= product.title %></td>
                                <td><%= product.price %></td>
                                <td><%= product.description %></td>
                                <td><%= product.barcode %></td>
                                <td><%= product.quantity_in_stock %></td>
                                <td><%= product.point_value %></td>
                                <td><a title="" data-placement="left" data-toggle="tooltip" href="<%= product_path(product) %>" data-original-title="Show"><span class="fa fa-eye"></span></a></td>
                                <td><a title="" data-placement="left" data-toggle="tooltip" href="<%= edit_product_path(product) %>" data-original-title="Edit"><span class="fa fa-edit"></span></a></td>
                                <td><a title="" data-placement="left" data-toggle="tooltip" href="<%= product_path(product) %>" data-original-title="Delete" data-method="delete" data-confirm="Are you sure?"><span class="fa fa-trash"></span></a></td>
                            </tr>
                          <%end%>
                      </tbody>
                  </table>
              </div>
          </div>
      </div>
  </div>


