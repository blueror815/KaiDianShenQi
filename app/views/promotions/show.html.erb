<div class="row top-section">
  <div class="col-lg-12">
    <!-- START panel-->
    <div class="panel panel-default">
       <div class="panel-heading">
         <h1>Product details</h1>
       </div>
       <div class="panel-body">
         <p>
           <h4>To whome it has been sent: </h4>
           <ul>
           <% @promotion.promotion_tags.each do |promotion_tag|%>
             <li><%= promotion_tag.tag %></li>
           <% end %>
           </ul>
         </p>

         <p>
           <strong>Offer:</strong>
           <%= @promotion.offer %>
         </p>

         <p>
           <strong>Occation:</strong>
           <%= @promotion.occation %>
         </p>

         <p>
           <strong>Expiry date:</strong>
           <%= @promotion.expiry_date %>
         </p>

         <%= link_to 'Edit', edit_promotion_path(@promotion) %> |
         <%= link_to 'Back', promotions_path %>
       </div>
   </div>
  </div>
</div>
