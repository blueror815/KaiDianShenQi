<h3>Employees</h3>
<!-- START panel-->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!--div class="panel-heading">

            <!--small>Zero Configuration</small-->

            <div class="panel-body">
                <div class="row m-b-15">
                    <div class="col-xs-6">
                       Employees 
                    </div>
                    <div class="col-xs-6 text-right">
                        <%= link_to 'New Employee', new_employee_path, class: 'btn btn-primary' %>
                      </div>
                  </div>
                  <table class="table table-border table-striped table-hover">
                      <thead>
                          <tr>
                              <th>Username</th>
                              <th>Added on</th>
                              <th>Show</th>
                              <th>Edit</th>
                              <th>Delete</th>
                          </tr>
                      </thead>
                      <tbody>
                          <% @employees.each do |employee| %>
                            <tr>
                                <td><%= employee.user_name %></td>
                                <td><%= employee.created_at %></td>
                                <td><a title="" data-placement="left" data-toggle="tooltip" href="<%= employee_path(employee) %>" data-original-title="Show"><span class="fa fa-eye"></span></a></td>
                                <td><a title="" data-placement="left" data-toggle="tooltip" href="<%= edit_employee_path(employee) %>" data-original-title="Edit"><span class="fa fa-edit"></span></a></td>
                                <td><a title="" data-placement="left" data-toggle="tooltip" href="<%= employee_path(employee) %>" data-original-title="Delete" data-method="delete" data-confirm="Are you sure?"><span class="fa fa-trash"></span></a></td>
                            </tr>
                          <%end%>
                      </tbody>
                  </table>
              </div>
          </div>
      </div>
</div>
