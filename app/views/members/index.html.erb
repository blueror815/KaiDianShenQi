<h3><%= t :members %></h3>
<!-- START panel-->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!--div class="panel-heading">

            <!--small>Zero Configuration</small-->

            <div class="panel-body">
                <div class="row m-b-15">
                    <div class="col-xs-12 text-right">
                        <form class="form-inline">
                            <div class="form-group">
                                <select class="form-control" id="member-filter">
                                    <%= @tags.collect{|x| "<option value='#{x}'>#{x}</option>"}.join("").html_safe %>
                                </select>
                            </div>
                        </form>
                    </div>
                    <!--div class="col-xs-6 text-right">
                        <a class="btn btn-primary" href="">New Product</a>
                    </div-->
                </div>
                <table class="table table-border table-striped table-hover">
                    <thead>
                        <tr>
                            <th><%= t :external_id %></th>
                            <th>Gender</th>
                            <th>Address</th>
                            <th>Birth Date</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody id="members-listing">
                        <% @members.each do |member| %>
                          <tr>
                              <td><%= link_to member.member_external_id, member %></td>
                              <td><%= member.gender %></td>
                              <td><%= member.address %></td>
                              <td><%= member.birth_date %></td>
                              <td><a title="" data-placement="left" data-toggle="tooltip" href="/w_members/<%= @memberships[member.id] %>" data-original-title="Delete" data-method="delete" data-confirm="Are you sure?"><span class="fa fa-trash"></span></a></td>
                          </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

